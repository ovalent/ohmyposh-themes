{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#0077c2",
          "foreground": "#ffffff",
          "leading_diamond": "\u256d\u2500\ue0b6",
          "style": "diamond",
          "template": "{{ .Name }}",
          "trailing_diamond": "\ue0b4 ",
          "type": "shell"
        },
        {
          "background": "#ef5350",
          "foreground": "#FFFB38",
          "leading_diamond": "\ue0b6",
          "properties": {
            "root_icon": "\uf292"
          },
          "style": "diamond",
          //"template": "<parentBackground>\ue0b0</> \uf0e7 ",
          "trailing_diamond": "\ue0b4 ",
          "type": "root"
        },
        {
          "foreground": "#100e23",
          "background": "#13f143",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "powerline_symbol": "\ue0b0",          
          "template": "\ue235 {{ .Venv }}",
          "trailing_diamond": "\ue0b4 ",
          "type": "python"
          // INCLUDE THE FOLLOWING LINE IN $PROFILE TO HIDE THE ORIGINAL (venv):
          // $env:VIRTUAL_ENV_DISABLE_PROMPT = 1
        },

        {
          "background": "#585858",
          "foreground": "#e4e4e4",
          "leading_diamond": "\ue0b6",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "style": "full"
          },
          "style": "diamond",
          "template": "{{ .Path }}",
          "trailing_diamond": "\ue0b4 ",
          "type": "path"
        },
        {
          "background": "#FFFB38",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffeb95{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#c5e478{{ end }}",
            "{{ if gt .Ahead 0 }}#C792EA{{ end }}",
            "{{ if gt .Behind 0 }}#C792EA{{ end }}"
          ],
          "foreground": "#011627",
          "leading_diamond": "\ue0b6",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "diamond",
          "template": "{{ .HEAD }} {{ if .Working.Changed }}{{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#ef5350> \uf046 {{ .Staging.String }}</>{{ end }}",
          "trailing_diamond": "\ue0b4",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "#585858",
          "foreground": "#e4e4e4",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "template": "\ue266 MEM: {{ round .PhysicalPercentUsed .Precision }}%",
          "trailing_diamond": "\ue0b4",
          "type": "sysinfo"
        },
        {
          "background": "#e4e4e4",
          "foreground": "#585858",
          "leading_diamond": " \ue0b6",
          "properties": {
            "style": "austin",
            "always_enabled": true
          },
          "invert_powerline": true,
          "style": "diamond",
          "powerline_symbol": "\ue0b2",
          "template": "\ue641 {{ .FormattedMs }} ",
          //"trailing_diamond": "\ue0b4",
          "type": "executiontime"
        },
        {
          "background": "#e4e4e4",
          "foreground": "#585858",
          "invert_powerline": true,
          //"leading_diamond": " \ue0b6",
          "style": "diamond",
          "template": "\uf073 {{ .CurrentDate | date .Format }}",
          "trailing_diamond": "\ue0b4",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#21c7c7",
          "style": "plain",
          "template": "\u2570\u2500",
          "type": "text"
        },
        {
          "foreground": "#e0f8ff",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ef5350{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\u276f ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
